// The Scanner utility reads inputs from the keyboard
import java.util.Scanner;

class Max {	// The name of the program
	public static void main (String args[]) {
		Scanner input = new Scanner(System.in);	//create a new instance of the object Scanner

		int choiceMainMenu, goAgain;	//Declaration of two variables 

		do // The beginning of loop
		{
			choiceMainMenu = 0; //Change the value to 0
				System.out.println((char)12);	//ASCII character 12 is Form Feed
				System.out.println();	//Blank line
				System.out.println("This program will give you a choice between several different programs, ");
				System.out.println("please select which one you want to use: ");
				System.out.println();
				System.out.println("Select 1 to Calculate the Area of a circle");
				System.out.println();
				System.out.println("Select 2 to Calculate the Volume of a Cube");
				System.out.println();
				System.out.println("Select 4 to Calculate the Area of a Trapezoid");
        System.out.println();
				System.out.println("Select 5 to Calculate the area of a Rectangle");
				System.out.println();
				System.out.println("Select 6 to Calculate the Area of a Parallelogram");
				System.out.println();
			choiceMainMenu = input.nextInt(); 	//Waiting for number input

				switch (choiceMainMenu){	//This command will choose one of the scenario below
					case 1:	//First scenario
					AreaOfCircle();	//Name of the scenario
					break;	//End of Switch statement after execution the case above
					case 2:	//Second scenario
					VolumeOfCube();	//Name of the scenario
					break;
					//case 3:	
					//AreaOfTriangle();	
					//break;
					case 4:	
					AreaOfTrapezoid();	
					break;
					case 5:	
					AreaOfRectangle();
					break;
					case 6:	
					AreaOfParallelogram();
				}	//End of Switch statement


			System.out.println("Do you wish to continue? Please enter Y or N");
			goAgain = input.next().charAt(0);	//Input for answer
			System.out.println((char)2);	//ASCII character 12 is Form Feed
		}	//End of loop
	
	while (goAgain !='n' && goAgain !='N');	//If answer "N" - end the program
	System.out.println("Program terminated by user"); 
}	//End of Main


private static void AreaOfCircle(){	// Start of the case 1
        
        Scanner input=new Scanner(System.in);	//create a new instance of the object Scanner
        
		// Declaration of variables 
        double radius = 0;
        double area_of_circle = 0;
   
        System.out.println(); //blank line
        System.out.println("This program will calculate the Area of a circle"); //prints message
        System.out.println();
        System.out.println("Please enter the value of the circle");	//Asks user to input the value of the circle
        radius = input.nextDouble();
        System.out.println(); //prints blank line        
        
        // Sends the value of the variable "radius" to the user‑defined function (UDF) named "Circle" 
        area_of_circle = Circle(radius);
        
		// Prints the result
        System.out.printf("The Area of the circle is %.2f\n", area_of_circle);
    }	// End of AreaOfCircle


	private static double Circle(final double radius){	//UDF "Circle"
		return (3.14*(radius*radius));	//Calculates the value and returns the result to area_of_circle
	}	// End of UDF "Circle"
           
		   
		   

private static void VolumeOfCube(){	//Start of the case 2

        Scanner input=new Scanner(System.in);	//create a new instance of the object Scanner
        
		// Declaration of variables 
        double side = 0;
        double volume_of_cube = 0;
        
        System.out.println(); //blank line
        System.out.println("This program will calculate the volume of cube"); //prints message
        System.out.println();
        System.out.println("Please enter the length of side");	//Asks user to input the length of side
        side = input.nextDouble();
        System.out.println(); //prints blank line        
        
        // Sends the value of the variable "side" to the user‑defined function (UDF) named "Cube"
        volume_of_cube = Cube(side);
        
		// Prints the result
		System.out.printf("The volume of cube is %.2f\n", volume_of_cube); 
    } // End of VolumeOfCube
	private static double Cube(final double side){	//UDF "Cube"
		return (side*side*side);	//Calculates the value and returns the result to volume_of_cube
	}	// End of UDF "Cube"

	
	//start of case 4.
	private static void AreaOfTrapezoid(){	
        
        Scanner input=new Scanner(System.in);	//create a new instance of the object Scanner
        
		// Declaration of variables 
        double a = 0;
        double b = 0;
        double h = 0;
        double add = 0;
        double area_of_Trapezoid = 0;
        //this is a
        System.out.println(); //blank line
        System.out.println("This program will calculate the Area of a Trapeziod"); //prints message
        System.out.println();
        System.out.println("Please enter the value of a");	//Asks user to input the value of the circle
        a = input.nextDouble();
        System.out.println(); //prints blank line        
        
        //this is b
        System.out.println("Please enter the value of b");	//Asks user to input the value of the circle
        b = input.nextDouble();
        System.out.println(); //prints blank line   
        
         //this is h
        System.out.println("Please enter the value of h");	//Asks user to input the value of the circle
        h = input.nextDouble();
        System.out.println(); //prints blank line 
        
        //add a and b
        
        // Sends the value of the variable "radius" to the user‑defined function (UDF) named "Circle" 
        area_of_Trapezoid = Trapezoid(a, b, h, add);
        
		// Prints the result
        System.out.printf("The Area of the Trapezoid is %.2f\n",area_of_Trapezoid);
    }	// End of AreaOfTrapezoid
    private static double Trapezoid(final double a, final double b, final double h, final double add){	//UDF "Cube"
		return ((a+b)/2*h);
}
		//Calculates the value and returns the result to area_of_Trapezoid
		// End of UDF "Trapezoid"



private static void AreaOfRectangle(){	//Start of case 5

        Scanner input=new Scanner(System.in);	//create a new instance of the object Scanner
        
		// Declaration of variables 
		double length = 0;
		double width = 0;
		double area_of_rectangle = 0;
		
		System.out.println(); //blank line
        System.out.println("This program will calculate the Area of a rectangle"); //print message
        System.out.println();
        System.out.println("Please enter the length");//Asks user for the length 
        length = input.nextDouble();
        System.out.println();
        System.out.println("Please enter the width");//Ask user for the width 
        width = input.nextDouble();
        System.out.println();
        
        area_of_rectangle = Rectangle(length, width);
        
        
        System.out.println("The area of the rectangle is " + area_of_rectangle);
	}
	
	private static double Rectangle(final double length, final double width){	//UDF "Rectangle", length and width are inputs, if udf didn't get both inputs - you'll get an error. "final" means you can't change this varuable
		return (length*width);	//Calculates the value and returns the result to area_of_rectangle
	}	// End of UDF "Rectangle"



private static void AreaOfParallelogram(){	//Start of case 6

        Scanner input=new Scanner(System.in);	//create a new instance of the object Scanner
        
		// Declaration of variables 
        double base = 0;
	double height = 0;
        double area_of_parallelogram = 0;
        
        System.out.println(); //blank line
        System.out.println("This program will calculate the Area of the Parallelogram"); //prints message
        System.out.println();
        System.out.println("Please enter the base");	//Asks user to input the base
        base = input.nextDouble();
	System.out.println();
	System.out.println("Please enter the height");
	height = input.nextDouble();
        System.out.println(); //prints blank line        
        
        // Sends the values of the variables "base" and "height" to the user‑defined function (UDF) named "Parallelogram"
        area_of_parallelogram = Parallelogram(base, height);
        
		// Prints the result
        System.out.printf("The Area of the Parallelogram is %.2f\n", area_of_parallelogram);
	
    } // End of AreaOfParallelogram


	private static double Parallelogram(final double base, final double height){	//UDF "Parallelogram", base and height are inputs, if udf didn't get both inputs - you'll get an error. "final" means you can't change this varuable
		return (base*height);	//Calculates the value and returns the result to area_of_parallelogram
	}	// End of UDF "Parallelogram"


}//end of program

